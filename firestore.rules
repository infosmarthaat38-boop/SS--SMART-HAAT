
rules_version = '2';

/**
 * FIRESTORE SECURITY RULES - SS SMART HAAT
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to products and categories
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Only via Firebase Admin or secure rules in future
    }

    match /categories/{categoryId} {
      allow read: if true;
      // For prototyping, allow anyone to create/delete in categories
      allow create, update, delete: if true;
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}
